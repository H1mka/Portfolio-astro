---
import SectionTitle from "./SectionTitle.astro"
import Image from "astro/components/Image.astro";
import aboutPhoto from "../assets/images/about_photo.jpg"

import translate from '../locales/translation.json'

const { pathname } = Astro.url;
const lang = pathname.split('/')[1]
const currentLang = translate[lang] || translate["en"]
const t = currentLang.about
---

<section class="about bg-gray-50">
  <div class="layout-wrapper">
    <SectionTitle title={t.sectionTitle} />
    <div class="flex gap-12">
      <div class="about-image w-full">
        <Image src={aboutPhoto} alt="selfie" />
      </div>
      <div class="about-info w-full">
        <h2 class="text-3xl font-semibold text-center mb-6">{t.infoTitle}</h2>
        <div class="flex flex-col gap-4 text-justify">
          <p>{t.paragraph1}</p>
          <p>{t.paragraph2}</p>
          <p>{t.paragraph3}</p>
          <p>{t.paragraph4}</p>
          <p>{t.paragraph5}</p>
        </div>
      </div>
    </div>
  </div>
</section>