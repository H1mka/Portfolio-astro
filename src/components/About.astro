---
import SectionTitle from "./SectionTitle.astro"
import Image from "astro/components/Image.astro";
import aboutPhoto from "../assets/images/about_photo.jpg"

import translate from '../locales/translation.json'

const { pathname } = Astro.url;
const lang = pathname.split('/')[1]
const currentLang = translate[lang] || translate["en"]
const t = currentLang.about
---

<section id="about" class="about bg-gray-50">
  <div class="layout-wrapper">
    <SectionTitle title={t.sectionTitle} />
    <div class="md:flex gap-12">
      <div class="
        about-image
        w-full
        flex
        justify-center
        mb-8
        md:mb-0
        md:block
        md:max-w-[360px]
      ">
        <Image src={aboutPhoto} alt="selfie" class="max-w-[280px] sm:max-w-[360px]" />
      </div>
      <div class="about-info w-full">
        <h2 class="
         text-2xl
         sm:text-3xl
         font-semibold
         md:text-center
         mb-6
        ">{t.infoTitle}</h2>
        <div class="flex flex-col gap-4 text-justify">
          <p>{t.paragraph1}</p>
          <p>{t.paragraph2}</p>
          <p>{t.paragraph3}</p>
          <p>{t.paragraph4}</p>
          <p>{t.paragraph5}</p>
        </div>
      </div>
    </div>
  </div>
</section>