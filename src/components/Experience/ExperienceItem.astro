---
import Image from 'astro/components/Image.astro'
import type { ExperienceItemType } from '../../types/types.ts'
interface IProps {
  item: ExperienceItemType
}

const { item } = Astro.props as IProps
console.log(item)
---

<article class="
  flex
  flex-col
  md:flex-row
  max-w-[896px]
  w-full
  rounded-xl
  shadow-xl
  mb-12
  p-8
  justify-between
  bg-white
  text-justify
  gap-4
  md:gap-0
">
  <div class="max-w-28 max-h-20 order-1">
    <Image src={item.logo} alt="company logo" />
  </div>
  <div class="max-w-[384px] order-3 md:order-2">
    <h4 class="text-lg md:text-xl font-bold">{item.positionTitle}</h4>
    <ul class="list-disc pl-8">
      {item.responsibilities.map((resp: string) => (
        <li>{resp}</li>
      ))}
    </ul>
  </div>
  <div class="max-w-[150px] order-2 md:order-3">{item.workTerm}</div>
</article>